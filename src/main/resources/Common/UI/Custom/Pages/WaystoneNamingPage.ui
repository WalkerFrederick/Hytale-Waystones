$C = "../Common.ui";

$C.@PageOverlay {
  LayoutMode: Middle;

  $C.@DecoratedContainer {
    Anchor: (Width: 500);

    #Title {
      $C.@Title {
        @Text = %server.waystone.naming.title;
      }
    }

    #Content {
      Padding: (Vertical: 32, Horizontal: 45);

      Label {
        Text: %server.waystone.naming.prompt;
        Style: (RenderBold: true, RenderUppercase: true, TextColor: #94a7bb);
      }

      Label #Error {
        Style: (RenderBold: true, TextColor: #bb3333);
        Visible: false;
      }

      TextField #NameInput {
        Style: $C.@DefaultInputFieldStyle;
        Background: $C.@InputBoxBackground;
        Anchor: (Top: 10, Height: 44);
        Padding: (Horizontal: 10);
        PlaceholderText: "Enter name...";
      }

      Group {
        LayoutMode: Center;
        Anchor: (Top: 8);

        $C.@TextButton #SubmitButton {
          @Anchor = (Right: 4);
          Text: %server.waystone.naming.submit;
          FlexWeight: 1;
        }

        $C.@SecondaryTextButton #CancelButton {
          @Anchor = (Left: 4);
          Text: %server.customUI.cancel;
          FlexWeight: 1;
        }
      }
    }
  }
}

$C.@BackButton {}

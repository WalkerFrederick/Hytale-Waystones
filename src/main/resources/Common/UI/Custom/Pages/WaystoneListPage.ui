$C = "../Common.ui";

$C.@PageOverlay {
  LayoutMode: Middle;

  $C.@DecoratedContainer {
    @CloseButton = true;
    Anchor: (Width: 600, Height: 700);

    #Title {
      $C.@Title #TitleText {
        @Text = %server.waystone.list.title;
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Horizontal: 20);

      // Tab buttons
      Group {
        LayoutMode: Left;
        Anchor: (Top: 16, Height: 36);

        $C.@SecondaryTextButton #TabPublic {
          Text: "Public";
          FlexWeight: 1;
        }

        Group {
          Anchor: (Width: 5);
        }

        $C.@SecondaryTextButton #TabPrivate {
          Text: "Private";
          FlexWeight: 1;
        }
      }

      // Warning for private waystones the player doesn't own
      Label #PrivateWarning {
        Text: "This Waystone is private. You cannot warp back to it.";
        Style: (FontSize: 13, TextColor: #e8a855, HorizontalAlignment: Center);
        Anchor: (Top: 8);
        Visible: false;
      }

      // Public Waystones Content
      Group #PublicContent {
        Visible: true;
        LayoutMode: Top;
        Anchor: (Top: 16);

        Label {
          Text: "Public Waystones";
          Style: (RenderBold: true, RenderUppercase: true, TextColor: #94a7bb);
        }

        Label #NoPublic {
          Text: "No public waystones";
          Style: (FontSize: 14, TextColor: #6a7a8a, HorizontalAlignment: Center);
          Anchor: (Top: 16);
          Visible: false;
        }

        Group #PublicList {
          LayoutMode: TopScrolling;
          ScrollbarStyle: $C.@DefaultScrollbarStyle;
          Anchor: (Left: 0, Right: 0, Top: 8, Height: 450);
        }
      }

      // Private Waystones Content
      Group #PrivateContent {
        Visible: false;
        LayoutMode: Top;
        Anchor: (Top: 16);

        Label {
          Text: "Private Waystones";
          Style: (RenderBold: true, RenderUppercase: true, TextColor: #94a7bb);
        }

        Label #NoPrivate {
          Text: "No private waystones";
          Style: (FontSize: 14, TextColor: #6a7a8a, HorizontalAlignment: Center);
          Anchor: (Top: 16);
          Visible: false;
        }

        Group #PrivateList {
          LayoutMode: TopScrolling;
          ScrollbarStyle: $C.@DefaultScrollbarStyle;
          Anchor: (Left: 0, Right: 0, Top: 8, Height: 450);
        }
      }

      // Edit button at bottom
      Group #EditButtonGroup {
        Anchor: (Top: 16, Height: 44);

        Button #SettingsButton {
          Anchor: (Full: 0);
          Style: $C.@DefaultButtonStyle;

          Group {
            Anchor: (Full: 0);
            LayoutMode: Center;

            Group {
              Anchor: (Width: 14, Height: 14, Right: 6);
              Background: "Icons/PencilIcon.png";
            }

            Label {
              Style: $C.@DefaultButtonLabelStyle;
              Text: "Edit";
            }
          }
        }
      }

    }
  }
}

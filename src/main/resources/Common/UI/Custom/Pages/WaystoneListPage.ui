$C = "../Common.ui";

$C.@PageOverlay {
  LayoutMode: Middle;

  $C.@DecoratedContainer {
    @CloseButton = true;
    Anchor: (Width: 600, Height: 700);

    #Title {
      $C.@Title #TitleText {
        @Text = %server.waystone.list.title;
      }
    }

    #Content {
      LayoutMode: Top;
      Padding: (Horizontal: 20);

      Group {
        Anchor: (Top: 16, Height: 44);

        Button #SettingsButton {
          Anchor: (Full: 0);
          Style: $C.@DefaultButtonStyle;

          Group {
            Anchor: (Full: 0);
            LayoutMode: Center;

            Group {
              Anchor: (Width: 14, Height: 14, Right: 6);
              Background: "Icons/PencilIcon.png";
            }

            Label {
              Style: $C.@DefaultButtonLabelStyle;
              Text: "Edit";
            }
          }
        }
      }

      // Public Waystones Section
      Label {
        Text: "Public Waystones";
        Style: (RenderBold: true, RenderUppercase: true, TextColor: #94a7bb);
        Anchor: (Top: 16);
      }

      Group #PublicList {
        Anchor: (Top: 8, Height: 200);
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
      }

      Label #NoPublic {
        Text: "No public waystones";
        Style: (FontSize: 12, TextColor: #6a7a8a);
        Anchor: (Top: 4);
      }

      // Private Waystones Section
      Label {
        Text: "Your Private Waystones";
        Style: (RenderBold: true, RenderUppercase: true, TextColor: #94a7bb);
        Anchor: (Top: 20);
      }

      Group #PrivateList {
        Anchor: (Top: 8, Height: 200);
        LayoutMode: TopScrolling;
        ScrollbarStyle: $C.@DefaultScrollbarStyle;
      }

      Label #NoPrivate {
        Text: "No private waystones";
        Style: (FontSize: 12, TextColor: #6a7a8a);
        Anchor: (Top: 4);
      }

    }
  }
}
